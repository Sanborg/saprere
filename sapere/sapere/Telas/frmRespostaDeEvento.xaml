                </TransformGroup>
            </TextBox.RenderTransform>
        </TextBox>
        <Image x:Name="imgAnexarLink1" HorizontalAlignment="Left" Height="23" Margin="61,601,0,0" VerticalAlignment="Top" Width="20" Source="/ícones-do-aplicativo/figura-anexar.png"/>
        <Image x:Name="imgAnexarLink2" HorizontalAlignment="Left" Height="23" Margin="61,642,0,0" VerticalAlignment="Top" Width="20" Source="/ícones-do-aplicativo/figura-anexar.png"/>
