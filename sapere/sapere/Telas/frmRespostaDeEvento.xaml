        <Image x:Name="imgFundoReportagemDeEvento" Margin="-27,-22,-40,-75" Source="/imgFundoRespostaDeEvento.png" Stretch="Fill"/>
        <TextBlock x:Name="txtResponderEvento" HorizontalAlignment="Left" Margin="10,45,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="80" Width="477" FontFamily="Lucida Sans" FontSize="39" FontWeight="Bold" TextAlignment="Center" Padding="0,15,110,0" MouseLeftButtonDown="RealizarLogin" Text="Responder Evento"/>
        <TextBox x:Name="boxTitulo" HorizontalAlignment="Center" TextWrapping="Wrap" Text="Título" VerticalAlignment="Top" Width="405" Height="109" Background="{x:Null}" BorderBrush="{x:Null}" FontFamily="Lucida Sans" FontSize="24" TextDecorations="{x:Null}" FontWeight="Bold" RenderTransformOrigin="0.5,0.5" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Foreground="#FF545454" Margin="0,196,0,0">
            <TextBox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0.261"/>
                    <TranslateTransform/>
                </TransformGroup>
            </TextBox.RenderTransform>
        </TextBox>
        <TextBox x:Name="boxTitulo_Copy" HorizontalAlignment="Center" TextWrapping="Wrap" Text="Resposta" VerticalAlignment="Center" Width="425" Height="177" Background="{x:Null}" BorderBrush="{x:Null}" FontFamily="Lucida Sans" FontSize="14" TextDecorations="{x:Null}" FontWeight="Bold" RenderTransformOrigin="0.5,0.5" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Foreground="#FF545454">
