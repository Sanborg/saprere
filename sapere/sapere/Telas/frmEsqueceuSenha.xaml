<Window x:Class="sapere.View.frmEsqueceuSenha"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:sapere.View"
        mc:Ignorable="d"
        Title="frmEsqueceuSenha" Height="920" Width="523
        "
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Image x:Name="imgFundoEsqueceuSenha" Margin="-20,-21,-21,-19" Source="/imgFundoEsqueceuSenha.png" Stretch="Fill"/>

        <TextBox x:Name="boxEmail" HorizontalAlignment="Left" Margin="144,413,0,0" TextWrapping="Wrap" Text="Email" VerticalAlignment="Top" Width="265" Height="32" Background="{x:Null}" BorderBrush="{x:Null}" FontFamily="Lucida Sans" FontSize="24" TextDecorations="{x:Null}" FontWeight="Bold"/>
        <TextBlock x:Name="btnEnviarEmail" HorizontalAlignment="Center" Margin="0,534,0,0" TextWrapping="Wrap" Text="ENVIAR EMAIL DE RECUPERAÇÃO" VerticalAlignment="Top" Height="55" Width="212" FontFamily="Lucida Sans" FontSize="18" FontWeight="Bold" TextAlignment="Center" Padding="0,7,0,0" MouseLeftButtonDown="RealizarLogin"/>
        <TextBlock x:Name="btnVoltar" HorizontalAlignment="Left" Margin="24,807,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="67" Width="90" FontFamily="Lucida Sans" FontSize="18" FontWeight="Bold" TextAlignment="Center" Padding="0,7,0,0" MouseLeftButtonDown="RealizarLogin"/>
        <TextBlock x:Name="txtInformacoesRecuperacaoDeSenha" HorizontalAlignment="Center" Margin="0,265,0,0" TextWrapping="Wrap" Text="Digite seu email para enviarmos um código para recuperação de senha." VerticalAlignment="Top" Height="46" Width="357" FontFamily="Lucida Sans" FontSize="18" FontWeight="Bold" TextAlignment="Center" MouseLeftButtonDown="PressionarEsqueceuSenha"/>

    </Grid>
</Window>
